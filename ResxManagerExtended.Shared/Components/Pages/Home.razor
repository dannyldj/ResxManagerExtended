@page "/"

<PageTitle>@Loc["Home"]</PageTitle>

<FluentLayout>
    <FluentLabel Typo="Typography.H1">Hello, Resource!</FluentLabel>
    
    <FluentLabel Typo="Typography.Subject" MarginBlock="8px 32px">@Loc["Description"]</FluentLabel>

    <FluentGrid Spacing="8" AdaptiveRendering="true">
        <FluentGridItem>
            <FluentAnchor Href="https://developer.chrome.com/docs/capabilities/web-apis/file-system-access#browser_support"
                          IconStart="new Icons.Filled.Size20.Globe()">
                @Loc["BrowserCompatibility"]
            </FluentAnchor>
        </FluentGridItem>
        <FluentGridItem>
            <FluentAnchor Href="https://github.com/dannyldj/ResxManagerExtended/issues"
                          IconStart="new Icons.Filled.Size20.ChatHelp()">
                @Loc["HavingTrouble"]
            </FluentAnchor>
        </FluentGridItem>
    </FluentGrid>
</FluentLayout>