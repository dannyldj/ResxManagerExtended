@page "/settings"
@inherits FluxorComponent

<PageTitle>@Loc["Settings"]</PageTitle>

<FluentStack Orientation="Orientation.Vertical" VerticalGap="10">
    <FluentLabel Typo="Typography.PaneHeader" MarginBlock="0 10px">
        @Loc["Settings"]
    </FluentLabel>

    <FluentStack Orientation="Orientation.Vertical" VerticalGap="0">
        <FluentLabel>Root Directory</FluentLabel>
        <FluentButton
            OnClick="@GetRootDirectory">
            @(DirectoryState.Value.DirectoryName ?? Loc["SelectDirectory"])
        </FluentButton>
    </FluentStack>
</FluentStack>