@page "/settings"
@inherits FluxorComponent

<PageTitle>Settings</PageTitle>

<FluentStack Orientation="Orientation.Vertical" VerticalGap="10">
    <FluentLabel Typo="Typography.PaneHeader">Settings</FluentLabel>

    <FluentStack Orientation="Orientation.Vertical" VerticalGap="0">
        <FluentLabel>Root Directory</FluentLabel>
        <FluentButton OnClick="@GetRootDirectory">@(DirectoryState.Value.DirectoryName ?? "폴더 열기")</FluentButton>
    </FluentStack>
</FluentStack>